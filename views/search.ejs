<h1>검색화면</h1>

<form action='<%=link%>' method="post">
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">
            <%=kind%>
        </label>
        <div class="col-sm-5">
            <input type="id" class="form-control" placeholder="책 제목을 입력하세요" name="keyword" mexlength="50">
        </div>
    </div>
    <button class="btn btn-primary" type="submit">검색</button>
</form>
<p>
    <% if (listyn=="Y" ){%>
        <table class="table">
            <% var i=0; 
            while(i < bs.length){ 
                if(kind==='Book 검색' ){ %>
                <tr>
                    <td><img src="/<%=bs[i].img%>" style="width: 100px;height:100px;" /></td>
                    <td><a href="/book_detail/<%=bs[i].id%>">
                            <%=bs[i].name%>
                        </a></td>
                    <td>
                        <%=bs[i].author%>
                    </td>
                    <td>
                        <%=bs[i].price%>원
                    </td>
                </tr>
                <% } else if(kind==='Namecard 검색' ){ %>
                    <tr>
                        <td>
                            <%=bs[i].title%>
                        </td>
                        <td>
                            <%=bs[i].description%>
                        </td>
                    </tr>
                <% } else if(kind==='Calendar 검색' ){ %>
                        <tr>
                            <td>
                                <%=bs[i].title%>
                            </td>
                            <td>
                                <%=bs[i].description%>
                            </td>
                        </tr>
                <%} 
                    i++;
                } %>
        </table>
        <%}%>
</p>